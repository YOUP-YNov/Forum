@model IEnumerable<BackOffice.Models.TopicModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sujet_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptifTopic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resolu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilisateur_id)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sujet_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptifTopic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resolu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Utilisateur_id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { idTopic = item.Topic_id }) |
                    @Html.ActionLink("Details", "Details", new { idTopic = item.Topic_id }) |
                    @Html.ActionLink("Delete", "Delete", new { idTopic = item.Topic_id }) |
                    @Html.ActionLink("Voir les messages", "IndexByTopic", "Message", new { idTopic = item.Topic_id }, null)
                </td>
            </tr>
        }

    </table>
}